<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m">
	<Dialog title="Enter New Values" id="addAction" contentWidth="80%" afterClose="dialogAfterclose">
		<l:VerticalLayout width="100%" class="sapUiContentPadding">
			<l:content>
				<Label labelFor="inputBeerName" text="Beer Name" required="true"/>
				<Input id="inputBeerName" placeholder="Enter Beer Name" type="Text"/>
				<Label labelFor="inputPrice" text="Price" required="true"/>
				<Input id="inputPrice" placeholder="Enter Price" type="Number"/>
				<Label labelFor="inputQuantity" text="Quantity" required="true"/>
				<Input id="inputQuantity" placeholder="Enter Quantity" type="Number" liveChange="onLiveChange"/>
				<Label labelFor="inputCurrency" text="Currency"/>
				<Select id="inputCurrency" selectedKey="{CURRENCY}">
					<items>
						<core:Item text="EUR" key="EUR"/>
						<core:Item text="USD" key="USD"/>
						<core:Item text="RUB" key="RUB"/>
						<core:Item text="GBT" key="GBT"/>
						<core:Item text="AUD" key="AUD"/>
						<core:Item text="INR" key="INR"/>
						<core:Item text="AUD" key="AUD"/>
						<core:Item text="CAD" key="CAD"/>
						<core:Item text="SGD" key="SGD"/>
					</items>
				</Select>
				<!--<Label labelFor="inputContinent" text="Continent"/>-->
				<!--<Input id="inputContinent" placeholder="Enter Continent" type="Text"/>-->
			</l:content>
		</l:VerticalLayout>
		<beginButton>
			<Button text="Confirm" press="onConfirmDialog"/>
		</beginButton>
		<endButton>
			<Button text="Close" press="onCloseDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>