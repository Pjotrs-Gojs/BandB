<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m">
	<Dialog title="Enter New Values" id="addBar" contentWidth="80%" afterClose="dialogAfterclose">
		<l:VerticalLayout width="100%" class="sapUiContentPadding">
			<l:content>
				
				<Label labelFor="inputBarName" text="Bar Name" required="true"/>
				<Input id="inputBarName" placeholder="Enter Bar Name" type="Text"/>
				
				<Label labelFor="inputStreet" text="Street" required="true"/>
				<Input id="inputStreet" placeholder="Enter Street" type="Text"/>
				
				<Label labelFor="inputPhone" text="Phone" required="true"/>
				<Input id="inputPhone" placeholder="Enter Phone" type="Text"/>
				
				<!--<Label labelFor="inputContinent" text="Continent"/>-->
				<!--<Input id="inputContinent" placeholder="Enter Continent" type="Text"/>-->
			</l:content>
		</l:VerticalLayout>
		<beginButton>
			<Button text="Confirm" press="onConfirmDialog"/>
		</beginButton>
		<endButton>
			<Button text="Close" press="onCloseDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>